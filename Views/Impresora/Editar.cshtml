@model Impresora
@{
  ViewData["Title"] = "Impresora";
}

<h1>Inserta <strong>el inventario de la impresora que quieres editar</strong> y los datos a cambiar en la impresora</h1>
<Form method="post">
  <div class="mb-3">
    <label asp-for="NumInvId" class="form-label"></label>
    <input asp-for="NumInvId" type="text" required placeholder="Ejemplo: 34563" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Marca" class="form-label"></label>
    <input asp-for="Marca" type="text" required placeholder="Ejemplo: Epson" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="NumSerie" class="form-label"></label>
    <input asp-for="NumSerie" type="text" required placeholder="Ejemplo: 56tf6889hg" class="form-control">
  </div>
  
  <div class="mb-3">
    <label asp-for="estado" class="form-label"></label>

    @Html.DropDownList(
    "estado", Html.GetEnumSelectList<Estado>(),
    "Seleccione un estado"
    )
  </div>
  <input type="submit" value="Crear">
</Form>
