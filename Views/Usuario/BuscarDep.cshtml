@model Usuario
@{
    ViewData["Title"] = "Usuario";
}

<h2>Buscar usuario por departamento</h2>

<h3>Ingrese el nombre del departamento que desea buscar</h3>
<div>
    <form method="post">
        <div>
            <label asp-for="NombreDepartamento" class="form-label"></label>
            <input asp-for="NombreDepartamento" required placeholder="Ejemplo: Finanzas" class="form-control" />
        </div>


        <input type="submit" value="Buscar" />
    </form>

</div>