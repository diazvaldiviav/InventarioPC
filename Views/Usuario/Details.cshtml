@model ProyectoInventarioASP.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1 class="h1">Detalles</h1>

<div>
    <h4 class="h4">Usuario No: @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col p-2 bg-light border">@Html.DisplayNameFor(model => model.NombreCompleto)</div>
            <div class="col p-2 bg-light border">@Html.DisplayFor(model => model.NombreCompleto)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-light border">@Html.DisplayNameFor(model => model.NombreUsuario)</div>
            <div class="col p-2 bg-light border">@Html.DisplayFor(model => model.NombreUsuario)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-light border">@Html.DisplayNameFor(model => model.NombreDepartamento)</div>
            <div class="col p-2 bg-light border">@Html.DisplayFor(model => model.NombreDepartamento)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-light border">@Html.DisplayNameFor(model => model.NombreArea)</div>
            <div class="col p-2 bg-light border">@Html.DisplayFor(model => model.NombreArea)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-light border">@Html.DisplayNameFor(model => model.Cargo)</div>
            <div class="col p-2 bg-light border">@Html.DisplayFor(model => model.Cargo)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-light border"><h3 class="h3">Responsable de:</h3></div>
               @if (Model.Monitores.Count() == 0)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border">Este trabajador no tiene monitor</div>
            }
             @if (Model.Computadora.Count() == 0)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border">Este trabajador no tiene Computadora</div>
            }
              @if (Model.Impresora.Count() == 0)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border">Este trabajador no tiene impresora</div>
            }
               @if (Model.Teclado.Count() == 0)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border">Este trabajador no tiene Teclado</div>
            }
               @if (Model.Ups.Count() == 0)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border">Este trabajador no tiene Ups</div>
            }
            @foreach (var item in Model.Monitores)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-light border">Monitor Inv: @item.NumInv</div>
                <div class="col p-2 bg-light border">Marca: @item.Marca</div>
            }
             @foreach (var item in Model.Impresora)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-light border">Impresora Inv: @item.NumInv</div>
                <div class="col p-2 bg-light border">Marca: @item.Marca</div>
            }
             @foreach (var item in Model.Impresora)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-light border">Teclado Inv: @item.NumInv</div>
                <div class="col p-2 bg-light border">Marca: @item.Marca</div>
            }
             @foreach (var item in Model.Ups)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-light border">Ups Inv: @item.NumInv</div>
                <div class="col p-2 bg-light border">Marca: @item.Marca</div>
            }
              @foreach (var item in Model.Computadora)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-light border">Computadora Inv: @item.NumInv</div>
            }
        </div>


    </div>
    <div class="container-flex p-2">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm">Modificar</a>
        <td><a asp-action="Print" asp-route-id="@Model?.Id" class="btn btn-info btn-sm">Imprimir</a></td>
        <a asp-action="Index">Volver</a>
    </div>
