@model ProyectoInventarioASP.Models.Bajas

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1 class="h1">Modificar</h1>

<h4 class="h4">Bajas</h4>
<hr />
<div class="row">
    <div class="col-md-5 border border-1">
        <form asp-action="Edit">
            @if (Model.Equipo == "Computadora")
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="Equipo" class="control-label"></label>
                    <input asp-for="Equipo" placeholder="Inserta el equipo" class="form-control border border-1" />
                    <span asp-validation-for="Equipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumInv" class="control-label"></label>
                    <input asp-for="NumInv" placeholder="Inserta el inventario" class="form-control border border-1" />
                    <span asp-validation-for="NumInv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NumSerie" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="Marca" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="fechaBaja" class="control-label"></label>
                    <input asp-for="fechaBaja" placeholder="Inserta la fecha que se le dio baja"
                    class="form-control border border-1" />
                    <span asp-validation-for="fechaBaja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SerieBoard" class="control-label"></label>
                    <input asp-for="SerieBoard" list="boards" class="form-control border border-1" />
                    <datalist id="boards">
                        @foreach (var board in ViewBag.Boards)
                        {
                            <option value="@board.NumSerieBoard">@board.NumSerieBoard</option>
                        }
                    </datalist>
                    <span asp-validation-for="SerieBoard" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <input type="submit" value="Guardar" class="btn btn-orange" />
                </div>

            }
            else
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="Equipo" class="control-label"></label>
                    <input asp-for="Equipo" placeholder="Inserta el equipo" class="form-control border border-1" />
                    <span asp-validation-for="Equipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumInv" class="control-label"></label>
                    <input asp-for="NumInv" placeholder="Inserta el inventario del equipo"
                    class="form-control border border-1" />
                    <span asp-validation-for="NumInv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumSerie" class="control-label"></label>
                    <input asp-for="NumSerie" placeholder="Inserta el numero de serie"
                    class="form-control border border-1" />
                    <span asp-validation-for="NumSerie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" placeholder="Inserta la marca del equipo" class="form-control border border-1" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fechaBaja" class="control-label"></label>
                    <input asp-for="fechaBaja" placeholder="Inserta la fecha que se le dio baja"
                    class="form-control border border-1" />
                    <span asp-validation-for="fechaBaja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SerieBoard" type="hidden" class="form-control border border-1" />
                </div>
                <div class="form-group p-2">
                    <input type="submit" value="Guardar" class="btn btn-orange" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
