@model IEnumerable<ProyectoInventarioASP.Models.Equipos>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Registro de equipos que pueden entrar al taller</h1>

<div class="container-flex">
    <p>
        <a asp-action="Create" class="btn btn-orange btn-sm">Insertar</a>
    </p>
</div>

<div class="table-responsive">
    <table class="table table-hover" id="tabla">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="CuerpoTablaPc">
            @foreach (var item in Model)
            {
                <tr class="filapc">
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
                    {
                        <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-orange btn-sm">Detalles</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a></td>
                    }
                    @if (User.IsInRole("lectura"))
                    {
                        <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-orange btn-sm">Detalles</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
