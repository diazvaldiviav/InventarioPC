@model ProyectoInventarioASP.Models.MicroProcesador

@{
    ViewData["Title"] = "Create";
}
<div class="container_center">
<h1>Create</h1>

<h4>MicroProcesador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumSerieId" class="control-label"></label>
                <input asp-for="NumSerieId" class="form-control" />
                <span asp-validation-for="NumSerieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tecnologia" class="control-label"></label>
                <input asp-for="Tecnologia" class="form-control" />
                <span asp-validation-for="Tecnologia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="form-label"></label>

                @Html.DropDownList(
                "estado", Html.GetEnumSelectList<Estado>(),
                "Seleccione un estado"
                )

                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
