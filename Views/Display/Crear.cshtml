@model Display
@{
  ViewData["Title"] = "Monitor";
}

<h1>Inserta los datos del Monitor</h1>
<Form method="post">
  <div class="mb-3">
    <label asp-for="NumInvId" class="form-label"></label>
    <input asp-for="NumInvId" type="text" required placeholder="Ejemplo: 4567" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Marca" class="form-label"></label>
    <input asp-for="Marca" type="text" required placeholder="Ejemplo: Acer" class="form-control">
  </div>

  <div class="mb-3">
    <label asp-for="NumSerie" class="form-label"></label>
    <input asp-for="NumSerie" type="text" required placeholder="Ejemplo: 6r6f6f784uj8" class="form-control">
  </div>

  <div class="mb-3">
    <label asp-for="estado" class="form-label"></label>

    @Html.DropDownList(
    "estado", Html.GetEnumSelectList<Estado>(),
    "Seleccione un estado"
    )
  </div>
  <input type="submit" value="Crear">
</Form>
