@model ProyectoInventarioASP.Models.Display

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1 class="h1 text-danger">Dar Baja</h1>

<h3>Estas a punto de darle baja a este monitor, estas seguro?</h3>
<div>
    <h4>Monitor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumInv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumInv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumSerie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumSerie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumInvPc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumInvPc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computadora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computadora.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Dar Baja" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
