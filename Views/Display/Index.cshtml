@model IEnumerable<ProyectoInventarioASP.Models.Display>

@{
    ViewData["Title"] = "Index";
}

<h1>Monitores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Insertar</a>
</p>
 <div class="table-responsive">
    <table class="table table-hover table-border" id="tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumInv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumInvPc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computadora)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="CuerpoTablaPc">
@foreach (var item in Model) {
        <tr class="filapc">
            <td>
                @Html.DisplayFor(modelItem => item.NumInv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumInvPc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Computadora.Id)
            </td>
            <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Modificar</a></td>
            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalles</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Borrar</a></td>
            
        </tr>
}
    </tbody>
</table>
