@model IEnumerable<ProyectoInventarioASP.Models.Computadora>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form class="form-inline my-2 my-lg-0" method="post">
    <input class="form-control mr-sm-2" type="search" asp-for="NumInvId" placeholder="Search" aria-label="Search">
    <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
</form>
<div class="table-responsive-xl container">
<table class="table table-bordered table-hover table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumIp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscoDuro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemoriaRam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MicroProcesador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Display)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teclado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotherBoard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Impresora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                Opciones de modificacion
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumIp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscoDuro.NumSerieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemoriaRam.NumSerieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MicroProcesador.NumSerieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Display.NumInvId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teclado.NumInvId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotherBoard.NumSerieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Impresora.NumInvId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.NombreUsuarioId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumInvId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumInvId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumInvId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
