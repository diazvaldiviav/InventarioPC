@model ProyectoInventarioASP.Models.Computadora

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Modificar</h1>

<h4>Computadora</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row col-md-5 border border-1">
        <div class="form-group">
            <label asp-for="NumInv" class="control-label"></label>
            <input asp-for="NumInv" class="form-control border border-5" required />
            <span asp-validation-for="NumInv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NombreArea" class="control-label"></label>
            <input List="Areas" placeholder="Ingrese un Area" asp-for="NombreArea" class="form-control border border-5" />
            <datalist id="Areas">
                @foreach (var area in ViewBag.Areas)
                {
                    <option value="@area">@area</option>
                }
            </datalist>
            <span asp-validation-for="NombreArea" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NombreDepartamento" class="control-label"></label>
            <input asp-for="NombreDepartamento" list="departamentos"  placeholder="Ingrese un departamento" class="form-control border border-5" />
            <datalist id="departamentos">
                @foreach (var departamento in ViewBag.Departamentos)
                {
                    <option value="@departamento">@departamento</option>
                }
            </datalist>
            <span asp-validation-for="NombreDepartamento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" id="NombrePc" class="form-control border border-5" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
            <div class="inactive" id="validacionNombreMax">El maximo de caracteres para este campo es de 15</div>
            <div class="inactive" id="validacionNombreMin">El minimo de caracteres para este campo es de 13</div>
        </div>
        <div class="form-group">
            <label asp-for="SO" class="control-label"></label>
            <select asp-for="SO" class="form-control">
                <option value="Win 11 64bit">Win 11 64bit</option>
                <option value="Win 11 32bit">Win 11 32bit</option>
                <option value="Win 10 64bit">Win 10 64bit</option>
                <option value="Win 10 32bit">Win 10 32bit</option>
                <option value="Win 8 64bit">Win 8 64bit</option>
                <option value="Win 8 32bit">Win 8 32bit</option>
                <option value="Win 7 64bit">Win 7 64bit</option>
                <option value="Win 7 32bit">Win 7 32bit</option>
                <option value="Win XP">Win XP</option>
                <option value="Linux">Linux</option>
            </select>
            <span asp-validation-for="SO" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="estado"></label>
            @Html.DropDownList(
            "Estado", Html.GetEnumSelectList<Estado>(),
            "Seleccione un estado",
            new{@class = "form-control"}
            )
        </div>
        <div class="form-group">
            <label asp-for="Mac" class="control-label"></label>
            <input asp-for="Mac" placeholder="Introduzca un No de Mac" class="form-control border border-5" required />
            <span asp-validation-for="Mac" class="text-danger" required></span>
        </div>
        <div class="form-group">
            <label asp-for="Sello" class="control-label"></label>
            <input asp-for="Sello" placeholder="Introduzca un No de Sello" class="form-control border border-5"
                required />
            <span asp-validation-for="Sello" class="text-danger" required></span>
        </div>
        <div class="form-group">
            <label asp-for="NumIp" class="control-label"></label>
            <input asp-for="NumIp" placeholder="Introduzca un No de Ip" class="form-control border border-5" required />
            <span asp-validation-for="NumIp" class="text-danger" required></span>
        </div>
        <div class="form-group">
            <label asp-for="MotherBoardId" class="control-label"></label>
            <input asp-for="MotherBoardId" list="boards" placeholder="Introduzca un No de Serie de board"
                class="form-control border border-5" />
            <datalist id="boards">
                @foreach (var item in Model.MotherBoards)
                {
                    <option value="@item.NumSerieId">@item.NumSerieId</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            <label asp-for="ImprNumInv" class="control-label"></label>
            <input asp-for="ImprNumInv" placeholder="Introduzca el inventario de la impresora que esta conectada"
                list="invImp" class="form-control border border-5" />
            <datalist id="invImp">
                @foreach (var item in Model.Impresoras)
                {
                    <option value="@item.NumInv">@item.NumInv</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            <label asp-for="TeclNumInv" class="control-label"></label>
            <input asp-for="TeclNumInv" placeholder="Introduzca el inventario del teclado que esta conectado"
                list="tecladosinv" class="form-control border border-5" />
            <datalist id="tecladosinv">
                @foreach (var item in Model.Teclados)
                {
                    <option value="@item.NumInv">@item.NumInv</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" placeholder="Introduzca el nombre del usuario responsable"
                class="form-control border border-5" list="usuarios" />
            <datalist id="usuarios">
                @foreach (var item in Model.Usuarios)
                {
                    <option value="@item.NombreUsuario">@item.NombreUsuario</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            <label asp-for="UpsInv" class="control-label"></label>
            <input asp-for="UpsInv" placeholder="Introduzca el inventario de la UPS"
                class="form-control border border-5" list="Ups" />
            <datalist id="Ups">
                @foreach (var item in Model.Upss)
                {
                    <option value="@item.NumInv">@item.NumInv</option>
                }
            </datalist>
        </div>
        <div class="form-group p-2">
            <input type="submit" value="Guardar" class="btn btn-orange" />
        </div>
</form>


<div class="container-flex">
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
