@model Computadora

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>ContactPDF</title>
    <link rel="shortcut icon" href="~/Assets/logo.png" type="image/x-icon">
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">

</head>

<body>

    <h4>Computadora No: @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col p-2 border">
                <p>@Html.DisplayNameFor(model => model.NumInv) : @Html.DisplayFor(model => model.NumInv)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.NombreDepartamento) : @Html.DisplayFor(model =>
                    model.NombreDepartamento)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2     border">
                <p>@Html.DisplayNameFor(model => model.NombreArea) : @Html.DisplayFor(model => model.NombreArea)</p>
            </div>
            <div class="w-100"></div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.NumIp) : @Html.DisplayFor(model => model.NumIp)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.Mac) : @Html.DisplayFor(model => model.Mac)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.UserName) : @Html.DisplayFor(model => model.UserName)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.Sello) : @Html.DisplayFor(model => model.Sello)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <h3 class="h3">Detalles de los componentes: </h3>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.MotherBoardId) : @Html.DisplayFor(model => model.MotherBoard.NumSerieBoard)
                </p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.MotherBoardMarca) : @Html.DisplayFor(model =>
                    model.MotherBoardMarca)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.MicroTecn) : @Html.DisplayFor(model => model.MicroTecn)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.ImprNumInv) : @Html.DisplayFor(model => model.ImprNumInv)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.UpsInv) : @Html.DisplayFor(model => model.UpsInv)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2   border">
                <p>@Html.DisplayNameFor(model => model.TeclNumInv) : @Html.DisplayFor(model => model.TeclNumInv)</p>
            </div>
            <div class="w-100"></div>
            <div class="col p-2 border">
                <p>@Html.DisplayNameFor(model => model.estado) : @Html.DisplayFor(model => model.estado)</p>
            </div>
            <div class="w-100"></div>

            @foreach (var monitor in Model.Display)
            {
                <div class="w-100"></div>
                <div class="col p-2   border">Monitor inv: @monitor.NumInv</div>
                <div class="col p-2   border">Monitor Marca: @monitor.Marca</div>

            }
            <div class="w-100"></div>
            @foreach (var scan in Model.Scanners)
            {
                <div class="w-100"></div>
                <div class="col p-2   border">Scanner inv: @scan.NumInv</div>
                <div class="col p-2   border">Scanner Marca: @scan.Marca</div>

            }
            <div class="w-100"></div>
            @foreach (var disco in Model.Discos)
            {
                <div class="w-100"></div>
                <div class="col p-2   border">No Serie Disco: @disco.NumSerieDisco</div>
                <div class="col p-2   border">Marca del Disco: @disco.Marca</div>
                <div class="col p-2   border">Capacidad del disco: @disco.Capacidad</div>

            }

            <div class="w-100"></div>
            @foreach (var memoria in Model.Memorias)
            {

                <div class="w-100"></div>
                <div class="col p-2   border">No Serie De la memoria: @memoria.NumSerieMemoria</div>
                <div class="col p-2   border">Marca de la memoria: @memoria.Marca</div>
                <div class="col p-2   border">Capacidad de la memoria: @memoria.Capacidad</div>

            }
        </div>
    </div>
</body>

</html>