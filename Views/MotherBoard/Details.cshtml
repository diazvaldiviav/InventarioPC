@model ProyectoInventarioASP.Models.MotherBoard

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Detalles</h1>

<div>
    <h4>MotherBoard No: @Html.DisplayFor(model => model.NumSerieBoard)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Marca)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Marca)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.estado)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.estado)</div>
            <h3 class="h3">Especificaciones</h3>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Micro.NumSerieMicro)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Micro.NumSerieMicro)</div>
            @if (Model.computadora.NumInv != "Sin Computadora" && Model.computadora.NumInv != null)
            {
                <div class="w-100"></div>
                <div class="col p-2 border">Esta conectado a la computadora: </div>
                <div class="col p-2 border d-flex justify-content-between">@Model.computadora.NumInv y esta:
                    @Model.computadora.estado<a asp-route-Id="@Model.computadora.Id" asp-controller="Computadora"
                    asp-action="Edit" class="text-info">Modificar</a></div>
                @foreach (var memoria in Model.Memorias)
                {
                    <div class="w-100"></div>
                    <div class="col p-2 border">Tiene conectada esta memoria: </div>
                    <div class="col p-2 border d-flex justify-content-between">@memoria.NumSerieMemoria con @memoria.Capacidad de
                        capacidad y esta: @memoria.estado<a asp-route-Id="@memoria.KayNumSerieId" asp-controller="MemoriaRam"
                    asp-action="Edit" class="text-info">Modificar</a></div>
                }
                @foreach (var disco in Model.Discos)
                {
                    <div class="w-100"></div>
                    <div class="col p-2 border">Tiene conectada este disco: </div>
                    <div class="col p-2 border d-flex justify-content-between">@disco.NumSerieDisco con @disco.Capacidad de
                        capacidad y esta: @disco.estado<a asp-route-Id="@disco.NumSerieId" asp-controller="DiscoDuro"
                    asp-action="Edit" class="text-info">Modificar</a></div>
                }
            }
            else if (Model.baja.SerieBoard != "-" && Model.baja.SerieBoard != null)
            {
                <div class="w-100"></div>
                <div class="col p-2 border">Esta conectado a la computadora que se le dio baja: </div>
                <div class="col p-2 border">@Model.baja.NumInv</div>
                @foreach (var memoria in Model.Memorias)
                {
                    <div class="w-100"></div>
                    <div class="col p-2 border">Tiene conectada esta memoria: </div>
                    <div class="col p-2 border d-flex justify-content-between">@memoria.NumSerieMemoria con @memoria.Capacidad de
                        capacidad y esta: @memoria.estado<a asp-route-Id="@memoria.KayNumSerieId" asp-controller="MemoriaRam"
                    asp-action="Edit" class="text-info">Modificar</a></div>
                }
                @foreach (var disco in Model.Discos)
                {
                    <div class="w-100"></div>
                    <div class="col p-2 border">Tiene conectada este disco: </div>
                    <div class="col p-2 border d-flex justify-content-between">@disco.NumSerieDisco con @disco.Capacidad de
                        capacidad y esta: @disco.estado<a asp-route-Id="@disco.NumSerieId" asp-controller="DiscoDuro"
                    asp-action="Edit" class="text-info">Modificar</a></div>
                }
            }
            else
            {
                <div class="w-100"></div>
                <div class="col p-2 border text-info">Esta board no esta conectado a ninguna computadora</div>
            }
        </div>
    </div>
    <div class="container-flex p-2">
        <a asp-action="Edit" asp-route-id="@Model?.NumSerieId" class="btn btn-orange btn-sm">Modificar</a> |
        <a asp-action="Index" class="btn btn-orange btn-sm">Volver</a>
    </div>
