@model ProyectoInventarioASP.Models.MotherBoard

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar esto?</h3>
<div>
    <h4>MotherBoard No: @Html.DisplayFor(model => model.NumSerieBoard)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Micro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Micro.NumSerieMicro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NumSerieId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
