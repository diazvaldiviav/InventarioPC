@model ProyectoInventarioASP.Models.MotherBoard

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MotherBoard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumSerieId" class="control-label"></label>
                <input asp-for="NumSerieId" class="form-control" />
                <span asp-validation-for="NumSerieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MicroProcesadorId" class="control-label"></label>
                <select asp-for="MicroProcesadorId" class ="form-control" asp-items="ViewBag.MicroProcesadorId"></select>
            </div>
            <div class = "form-group">
             <label asp-for="estado"></label>
              @Html.DropDownList(
              "Estado", Html.GetEnumSelectList<Estado>(),
              "Seleccione un estado",
              new{@class = "form-control"}
              )
              </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
