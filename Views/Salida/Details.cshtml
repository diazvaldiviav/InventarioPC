@model ProyectoInventarioASP.Models.Salida

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Detalles de la salida</h1>

<div>
    <h4>Salida No: @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.salida)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.salida)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.FechaSalida)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.FechaSalida)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.observaciones)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.observaciones)</div>
        </div>
    </div>
    <div class="container-flex p-2">
        @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-orange btn-sm">Modificar</a>
            <a asp-action="Print" asp-route-id="@Model?.Id" class="btn bg-orange btn-sm">Imprimir</a>
        }
        <a asp-action="Index" class="btn bg-orange btn-sm">Volver</a>
    </div>
