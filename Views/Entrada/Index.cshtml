@model IEnumerable<ProyectoInventarioASP.Models.Entrada>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Entradas</h1>

@if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
{
    <div class="container-flex">
        <p>
            <a asp-action="Create" class="btn btn-orange btn-sm">Dar Entrada</a>
        </p>
    </div>
}
<div class="table-responsive">
    <table class="table table-hover" id="tabla">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Equipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumInvEquipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Entrega)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lugar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaEntrega)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.observaciones)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.salidas)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="CuerpoTablaPc">
            @foreach (var item in Model)
            {
                <tr class="filapc">
                    <td>
                        @Html.DisplayFor(modelItem => item.Equipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumInvEquipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entrega)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lugar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaEntrega)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.observaciones)
                    </td>
                    @if (item.salidas.EntradaId != 0)
                    {
                        <td>Si</td>
                    }
                    else
                    {
                        <td>No</td>
                    }


                    @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
                    {
                        <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-orange btn-sm">Detalles</a></td>
                        <td><a asp-controller="Salida" asp-action="Create" asp-route-id="@item.Id"
                        class="btn btn-orange btn-sm">Dar Salida</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a></td>
                    }

                    @if (User.IsInRole("lectura"))
                    {
                        <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-orange btn-sm">Detalles</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>