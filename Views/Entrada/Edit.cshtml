@model ProyectoInventarioASP.Models.Entrada

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1 class="h1">Modificar</h1>

<h4 class="h4">Entrada</h4>
<hr />
<div class="row">
    <div class="col-md-5 border border-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <div class="form-group">
                <label asp-for="Equipo" class="control-label"></label>
                <input asp-for="Equipo" List="equipos" placeholder="Introduzca el equipo"
                    class="form-control border border-5" required />
                <span asp-validation-for="Equipo" class="text-danger"></span>
                <datalist id="equipos">
                    @foreach (var equipo in Model.equipos)
                    {
                        <option value="@equipo.Tipo">@equipo.Tipo</option>
                    }
                </datalist>
                @if (Model.Equipo == ViewBag.Equipo)
                {
                    <div class="w-100"></div>
                    <div class="col p-2 bg-danger border d-flex justify-content-between">
                        <p>Este/a @Html.DisplayFor(model => model.Equipo) no solemos repararlo. Desea registrarlo como equipo a reparar</p> <a
                        asp-controller="Equipos" asp-action="Create" asp-route-Tipo="@Model.Equipo" class="text-info">Registrar</a>
                    </div>
                }

            </div>
            <div class="form-group">
                <label asp-for="NumInvEquipo" class="control-label"></label>
                <input asp-for="NumInvEquipo" placeholder="Introduzca el inevtario del equipo" placeholder="Introduzca el equipo" class="form-control border border-5" />
                <span asp-validation-for="NumInvEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrega" class="control-label"></label>
                <input asp-for="Entrega" placeholder="Introduzca quien entrego el equipo" class="form-control border border-5" />
                <span asp-validation-for="Entrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" placeholder="Introduzca el lugar de donde provino el equipo" class="form-control border border-5" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input asp-for="FechaEntrega" placeholder="Introduzca la fecha y la hora que entro el equipo" class="form-control border border-2" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="observaciones" class="form-label">Observaciones: </label>
                <textarea class="form-control border border-5" asp-for="observaciones" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-orange" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
