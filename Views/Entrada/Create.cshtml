@model ProyectoInventarioASP.Models.Entrada

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
    ViewBag.Fecha = DateTime.Now;
}

<h1 class="h1">Registrar</h1>

<h4 class="h4">Entrada</h4>
<hr />
<div class="row">
    <div class="col-md-5 border border-1">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Equipo" class="control-label"></label>
                <input asp-for="Equipo" placeholder="Introduzca el equipo" class="form-control border border-5" required/>
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumInvEquipo" class="control-label"></label>
                <input asp-for="NumInvEquipo" placeholder="Introduzca el numero de inventario del equipo" class="form-control border border-5" />
                <span asp-validation-for="NumInvEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrega" class="control-label"></label>
                <input asp-for="Entrega" placeholder="Introduzca quien va a entregar el equipo" class="form-control border border-5" required />
                <span asp-validation-for="Entrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" placeholder="Introduzca de donde proviene el equipo" class="form-control border border-5" required />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input asp-for="FechaEntrega" placeholder="Introduzca cuando se entro el elquipo" class="form-control border border-2" required />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="observaciones" class="form-label">Observaciones: </label>
                <textarea class="form-control border border-2" asp-for="observaciones" id="exampleFormControlTextarea1" requiered rows="3"></textarea>
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-orange" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
