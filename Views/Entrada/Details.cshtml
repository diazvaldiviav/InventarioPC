@model ProyectoInventarioASP.Models.Entrada

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Detalles de entrada y salida</h1>

<div>
    <h4>Registro de entrada No: @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <h3 class="h3">Entrada</h3>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.Equipo)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.Equipo)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.NumInvEquipo)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.NumInvEquipo)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.Lugar)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.Lugar)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.FechaEntrega)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.FechaEntrega)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.Entrega)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.Entrega)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.observaciones)</div>
            <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.observaciones)</div>
            <div class="w-100"></div>
            <div class="col p-2 bg-primary text-white border">
                <h3>Salida: <h3>
            </div>
            @if (Model.salidas != null)
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.salidas.salida)</div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.salidas.salida)</div>
                <div class="w-100"></div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.salidas.FechaSalida)
                </div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.salidas.FechaSalida)</div>
                <div class="w-100"></div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayNameFor(model => model.salidas.observaciones)
                </div>
                <div class="col p-2 bg-primary text-white border">@Html.DisplayFor(model => model.salidas.observaciones)
                </div>
            }
            else
            {
                <div class="w-100"></div>
                <div class="col p-2 bg-danger border d-flex justify-content-between">
                    <p>Este/a @Html.DisplayFor(model => model.Equipo) no se le ha dado salida</p> <a asp-controller="Salida"
                    asp-action="Create" asp-route-id="@Model.Id" class="text-info">Dar salida</a>
                </div>
            }
        </div>
    </div>
    <div class="container-flex p-2">
        @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm">Modificar</a>
            <a asp-action="Print" asp-route-id="@Model?.Id" class="btn btn-info btn-sm">Imprimir</a>
        }
        <a asp-action="Index" class="btn btn-info btn-sm">Volver</a>
    </div>
