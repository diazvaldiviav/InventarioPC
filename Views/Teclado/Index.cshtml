@model IEnumerable<ProyectoInventarioASP.Models.Teclado>

@{
    ViewData["Title"] = "Index";
}
<div class="margin">
<h1>Teclados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Insertar</a>
</p>
<div class = "table-responsive-sm">
<table class="table">
    <thead>
        <tr>
            <th scope="col">Numero de inventario</th>
            <th scope="col">Numero de serie</th>
            <th scope="col">Marca</th>
            <th scope="col">Tipo de conexion</th>
            <th scope="col">Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.NumInvId</td>
                <td>@obj.NumSerie</td>
                <td>@obj.Marca</td>
                <td>@obj.TipoConexion</td>
                <td>@obj.estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.NumInvId" class="btn btn-primary btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@obj.NumInvId" class="btn btn-primary btn-sm">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@obj.NumInvId" class="btn btn-danger btn-sm">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div></div>