@model ProyectoInventarioASP.Models.Laptop

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}



<div>
    <hr />
    <h1 class="h1">Detalles</h1>
    <h3 class="h3">Laptop No: @Html.DisplayFor(model => model.Id)</h3>
    <div class="container">
        <div class="row">
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.NumInv)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.NumInv)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Nombre)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Nombre)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.NombreDepartamento)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.NombreDepartamento)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.NombreArea)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.NombreArea)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.NumIp)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.NumIp)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Mac)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Mac)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.UserName)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.UserName)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.estado)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.estado)</div>
        </div>
    </div>
    <div class="container-flex">
        @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-orange btn-sm">Modificar</a>
            <a asp-action="Print" asp-route-id="@Model?.Id" class="btn btn-orange btn-sm">Imprimir</a>
        }
        <a asp-action="Index" class="btn btn-orange btn-sm">Volver</a>
    </div>
