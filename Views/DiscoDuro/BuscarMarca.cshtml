@model DiscoDuro
@{
    ViewData["Title"] = "Disco Duro";
}

<h2>Buscar disco</h2>

<h3>Ingrese la capacidad del disco que desea buscar</h3>
<div>
    <form method="post">
        <div>
            <label asp-for="Marca" class="form-label"></label>
            <input asp-for="Marca" required placeholder="Ejemplo:Toshiba" class="form-control" />
        </div>


        <input type="submit" value="Buscar" />
    </form>




</div>
