@model ProyectoInventarioASP.Models.DiscoDuro

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Detalles</h1>

<div>
    <h4>DiscoDuro No: @Html.DisplayFor(model => model.NumSerieDisco)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Marca)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Marca)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.Capacidad)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.Capacidad)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.TipoConexion)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.TipoConexion)</div>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.estado)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.estado)</div>
             <h3 class="h3">Este disco se encuentra en</h3>
            <div class="w-100"></div>
            <div class="col p-2 border">@Html.DisplayNameFor(model => model.motherBoard.NumSerieBoard)</div>
            <div class="col p-2 border">@Html.DisplayFor(model => model.motherBoard.NumSerieBoard)</div>
             @if(Model.computadora.NumInv != "Sin Computadora" && Model.computadora.NumInv != null)
            {
                <div class="w-100"></div>
                <div class="col p-2 border">Esta conectado a la computadora: </div>
                <div class="col p-2 border">@Model.computadora.NumInv y esta: @Model.computadora.estado</div>
            }
            else if (Model.baja.SerieBoard != "-" && Model.baja.SerieBoard != null)
            {
                <div class="w-100"></div>
                <div class="col p-2 border">Esta conectado a la computadora que se le dio baja: </div>
                <div class="col p-2 border">@Model.baja.NumInv</div>
            }
            else
            {
                <div class="w-100"></div>
                <div class="col p-2 border text-info">Este disco no esta conectado a ninguna computadora</div>
            }
        </div>
    </div>
    <div class="container-flex p-2">
        <a asp-action="Edit" asp-route-id="@Model?.NumSerieId" class="btn btn-orange btn-sm">Modificar</a> |
        <a asp-action="Index" class="btn btn-orange btn-sm">Volver</a>
    </div>
