@model IEnumerable<ProyectoInventarioASP.Models.DiscoDuro>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Discos Duros</h1>

<p>
    @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
    {
    <div class="container-flex">
        <p>
            <a asp-action="Create" class="btn btn-primary btn-sm">Insertar</a>
        </p>
        <p>
            <a asp-action="ImprimirFilter" class="btn btn-primary btn-sm" id="guardar">Imprimir Todos</a>
        </p>
    </div>
    }
</p>
<div class="table-responsive">
    <table class="table table-hover table-border" id="tabla">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumSerieId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoConexion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.motherBoard)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="CuerpoTablaPc">
            @foreach (var item in Model)
            {
                <tr class="filapc">
                    <td>
                        @Html.DisplayFor(modelItem => item.NumSerieId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoConexion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.motherBoard.NumSerieId)
                    </td>
                    @if (User.IsInRole("admin") || User.IsInRole("lecturaYEscritura"))
                    {
                        <td><a asp-action="Edit" asp-route-id="@item.NumSerieId" class="btn btn-primary btn-sm">Modificar</a>
                        </td>
                        <td><a asp-action="Details" asp-route-id="@item.NumSerieId" class="btn btn-primary btn-sm">Detalles</a>
                        </td>
                        <td><a asp-action="Delete" asp-route-id="@item.NumSerieId" class="btn btn-danger btn-sm">Borrar</a></td>
                        <td><a asp-action="Print" asp-route-id="@item.NumSerieId" class="btn btn-info btn-sm">Imprimir</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>