@model IEnumerable<ProyectoInventarioASP.Models.DiscoDuro>

@{
    ViewData["Title"] = "Index";
}

<h1>Discos Duros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Insertar</a>
</p>
<div class="table-responsive">
<table class="table table-hover table-border" id="tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoConexion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.motherBoard)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="CuerpoTablaPc">
@foreach (var item in Model) {
        <tr class="filapc">
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoConexion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.motherBoard.NumSerieId)
            </td>
            <td><a asp-action="Edit" asp-route-id="@item.NumSerieId" class="btn btn-primary btn-sm">Modificar</a> </td>
            <td><a asp-action="Details" asp-route-id="@item.NumSerieId" class="btn btn-primary btn-sm">Detalles</a> </td>
            <td><a asp-action="Delete" asp-route-id="@item.NumSerieId" class="btn btn-danger btn-sm">Borrar</a></td>
        </tr>
}
    </tbody>
</table>
</div>