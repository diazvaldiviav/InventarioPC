@model IEnumerable<ProyectoInventarioASP.Models.DiscoDuro>

@{
    ViewData["Title"] = "Index";
}
<div class="margin">
<h1>Discos duros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Insertar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Numero de serie</th>
            <th scope="col">Marca</th>
            <th scope="col">Tipo de conexion</th>
            <th scope="col">Capacidad</th>
            <th scope="col">Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.NumSerieId</td>
                <td>@obj.Marca</td>
                <td>@obj.TipoConexion</td>
                <td>@obj.Capacidad</td>
                <td>@obj.estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.NumSerieId" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@obj.NumSerieId" class="btn btn-primary btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@obj.NumSerieId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>