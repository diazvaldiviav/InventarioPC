@model User

@{
  ViewData["Title"] = "Home Page";
  Layout = "_Layout";
}
<div class="layer"></div>
<main class="page-center">
  <article class="sign-up">
    <h1 class="sign-up__title">Crea un usuario</h1>
    <p class="sign-up__subtitle">Emepecemos creando una mejor experiencia de usuario</p>
    <form class="sign-up-form form"  method="post">
      <label class="form-label-wrapper" asp-for="Nombre">
        <p class="form-label">Nombre</p>
        <input class="form-input" type="text" asp-for="Nombre" placeholder="Ingresa tu nombre" required>
      </label>
      <label class="form-label-wrapper" asp-for="Email">
        <p class="form-label">Correo</p>
        <input class="form-input" type="email" placeholder="Entre su cooreo" asp-for="Email" required>
      </label>
      <label class="form-label-wrapper" asp-for="username">
        <p class="form-label">Nombre de usuario</p>
        <input class="form-input" type="text" placeholder="Entre su nombre de usuario" asp-for="username" required>
      </label>
      <label class="form-label-wrapper" id="PasswordLabel" asp-for="password">
        <p class="form-label">Password</p>
        <input class="form-input" id="password" type="password" placeholder="Entre su password" asp-for="password" required>
        <p class="text-danger">@ViewBag.Message</p>
      </label>
       <label class="form-label-wrapper" asp-for="ConfirmPassword">
        <p class="form-label">Confirma tu contraseña</p>
        <input class="form-input" id="ConfirmPassword" type="password" placeholder="Entre su password" asp-for="ConfirmPassword" required>
      </label>
      <label class="form-checkbox-wrapper">
        <select asp-for="permisos" class="form-input">
          <option value="admin">Administrador</option>
          <option value="lecturaYEscritura">Lectura y escritura</option>
          <option value="lectura">lectura</option>
        </select>
      </label>
      <button class="form-btn primary-default-btn transparent-btn" type="submit">Registrar</button>
    </form>
  </article>
</main>